<div>
  
	 <%= form_for(user, url: "/update/#{user.id}" , :remote => true , :method => "post") do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, autofocus: true, class: "form-control" %></div>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control" , :disabled => "disabled" %></div>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %></div>

     


    	  <%= f.submit "Enregistrer", class: "btn btn-success" , id:"submit-new" %></div>
    <% end %>

</div>